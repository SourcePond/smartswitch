            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.core</artifactId>
        </dependency>
        <dependency>
            <scope>test</scope>
            <groupId>ch.sourcepond.testing</groupId>
            <artifactId>bundle-test-support</artifactId>
