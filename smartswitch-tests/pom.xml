            <groupId>ch.sourcepond.commons</groupId>
            <artifactId>smartswitch-feature</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <scope>test</scope>
            <groupId>org.ops4j.pax.tinybundles</groupId>
